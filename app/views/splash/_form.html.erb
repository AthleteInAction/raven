<%= form_for @user do |f| %>

	<%= f.text_field :name,class: '',placeholder: 'Full Name',autocomplete: 'off' %>
	<%= f.text_field :email,class: '',placeholder: 'Email',autocomplete: 'off' %>
	<%= f.password_field :password,class: '',placeholder: 'Password',autocomplete: 'off' %>
	<%= f.submit 'Create Account',class: 'splash-btn' %>

<% end %>