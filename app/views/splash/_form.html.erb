<%= form_for @user do |f| %>

  <%= f.text_field :name,class: 'lrg full shine',placeholder: 'Full Name',autocomplete: 'off' %>
  <%= f.text_field :email,class: 'lrg full shine',placeholder: 'Email',autocomplete: 'off' %>
  <%= f.password_field :password,class: 'lrg full shine',placeholder: 'Password',autocomplete: 'off' %>
  <%= f.submit 'Join Wambl',class: 'btn lrg full' %>

<% end %>