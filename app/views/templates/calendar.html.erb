<div id="calendar">

	<div class="calhead">

		<table>
			<tr>
				<td align="left" valign="middle">
					<div class="cal-labels">

						<div class="month-td">
							{{months[month].long}}&nbsp;-&nbsp;{{year}}
						</div>

					</div>
				</td>
			</tr>
		</table>

	</div>
	<div class="labels">

		<table>
			<tr>
				<td valign="middle" ng:repeat="day in days">
					<div class="show_day">{{day.long}}</div>
				</td>
			</tr>
		</table>

	</div>
	<div class="week" ng:repeat="week in weeks">

		<table class="backbone">
			<tr>
				<td valign="top" align="right" ng:repeat="day in week.days" class="{{day.cl}}date">
					<div class="show_date">{{day.display}}</div>
				</td>
			</tr>
		</table>

		<table class="overlay">
			<tr>
				<td>&nbsp;</td>
				<td>&nbsp;</td>
				<td>&nbsp;</td>
				<td>&nbsp;</td>
				<td>&nbsp;</td>
				<td>&nbsp;</td>
				<td>&nbsp;</td>
			</tr>
			<tr ng:repeat="row in overlay[$index]">
				<td ng:repeat="event in row" colspan="{{event.span}}">
					<a href="/app/#/events/{{event.id}}" class="span {{event.cl}} {{hover[event.id]}}" ng:mouseover="highlight(event.id)" ng:mouseleave="highlight(0)" ng:if="event.span">&nbsp;{{event.text}}</a>
					<span ng:if="!event.span">&nbsp;</span>
				</td>
			</tr>
		</table>

	</div>

</div>