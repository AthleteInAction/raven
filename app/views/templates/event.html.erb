<div ng:show="!event.id">

	Loading...
	<table class="event-nav invis" cellpadding="0" cellspacing="0" border="0">
		<tr>
			<td>
				<a href="" class="event-nav-item">&nbsp;</a>
			</td>
		</tr>
	</table>

</div>
<div ng:show="event.id">

	<div class="event-title">{{event.title}}</div>
	<div class="event-hashtag" ng:if="event.hashtag">#{{event.hashtag}}</div>

	<table class="event-nav" cellpadding="0" cellspacing="0" border="0">

		<tr>
			<td class="{{etab.info}}">
				<a href="" class="event-nav-item" ng:click="changeTab('info')">Info</a>
			</td>
			<td class="{{etab.people}}">
				<a href="" class="event-nav-item" ng:click="changeTab('people')">People</a>
			</td>
			<td class="{{etab.expenses}}">
				<a href="" class="event-nav-item" ng:click="changeTab('expenses')">Expenses</a>
			</td>
			<td class="{{etab.map}}">
				<a href="" class="event-nav-item" ng:click="changeTab('map'); geocode(event.location);">Map</a>
			</td>
			<td ng:if="event.hashtag" class="instagram-tab {{etab.instagram}}">
				<a href="" class="event-nav-item" ng:click="changeTab('instagram')">
					<img src="<%= asset_path('instagram-tab.png') %>">
				</a>
			</td>
		</tr>

	</table>

	<div class="info-wrap" ng:show="etab.info">

		<div class="event-top">

			<div class="event-top-cell">

				<div class="event-info"><span class="GREY">From:</span>&nbsp;&nbsp;&nbsp;&nbsp;{{days[event.from.getUTCDay()].long}},&nbsp;{{months[event.from.getUTCMonth()].long}}&nbsp;{{event.from.getUTCDate()}},&nbsp;{{event.from.getUTCFullYear()}}</div>
				<div class="event-info"><span class="GREY">To:</span>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;{{days[event.to.getUTCDay()].long}},&nbsp;{{months[event.to.getUTCMonth()].long}}&nbsp;{{event.to.getUTCDate()}},&nbsp;{{event.to.getUTCFullYear()}}</div>
				<div class="event-info" ng:if="event.location"><span class="GREY">Where:</span>&nbsp;&nbsp;{{event.location}}</div>
				<div class="event-info" ng:if="event.description_html">
					<div class="event-details" ng:if="event.description_html" ng-bind-html-unsafe="event.description_html">{{event.description_html}}</div>
				</div>

			</div>
			<div class="event-top-cell">

				<div class="event-invite" ng:if="myInvitation.role != 'creator' && myInvitation">

					<button class="btn" ng:if="myInvitation.accepted != 1" ng:click="updateInvite(1)">Accept Invite</button>
					<button class="btn" ng:if="myInvitation.accepted != 2" ng:click="updateInvite(2)">Decline Invite</button>

				</div>

			</div>

		</div>


		<div class="comments-wrap">

			<textarea class="full comment-text" placeholder="Leave Comment" onenter="submitComment()" ng:model="comment_text"></textarea>

			<div class="comments-comment type-{{comment.d_class}}" ng:repeat="comment in comments">
				<div class="comment-wrap">

					<div class="comment-user">
						{{comment.show_name}}:
					</div>
					<div class="CLEAR"></div>
					<div class="comment-body" id="comment_body_{{$index}}">
						<div ng-bind-html-unsafe="comment.body_html">{{comment.body_html}}</div>
						<div class="comment-date">{{comment.clean_date}}</div>
					</div>
					<!--<a href="" class="comment-delete">X</a>-->
					<div class="CLEAR"></div>

				</div>
				<div class="CLEAR"></div>
			</div>

		</div>

	</div>

	<div class="people-wrap" ng:show="etab.people">

		<div class="menu-wrap">

			<ul class="menu-container">
				<li class="menu-section">

					<div class="menu-label">Invite People</div>

					<ul class="menu-items">
						<li class="menu-item">
							<div class="{{invite_class}}" ng:if="invite_class">{{invite_message}}</div>
							<input type="text" class="full" placeholder="Enter Email" id="invite_display" ng:model="invite_display" onenter="invitePerson(invite_display)" />
						</li>
						<!--<li class="menu-item" ng:repeat="contact in contacts.all">
							<a href="" class="menu-item-label">
								<div class="maintext F14">{{contact.name}}</div>
								<div class="subtext F12">{{contact.email}}</div>
							</a>
						</li>-->
					</ul>

				</li>
			</ul>

		</div>

		<table class="people-table" cellpadding="0" cellspacing="0" border="0">
			<tr>
				<td>
					
					<div class="menu-wrap">

						<ul class="menu-container">
							<li class="menu-section">

								<div class="menu-label">Invited</div>

								<ul class="menu-items">
									<li class="menu-item" ng:repeat="invite in invitations.invited">
										<a href="" class="menu-item-label" ng:click="uninvitePerson(invite)">

											<table class="menu-item-table">
												<tr>
													<td ng:if="invite.user.profile_pic">
														<img src="{{invite.user.profile_pic}}" class="profile_pic" />
													</td>
													<td>
														<div class="maintext F14">{{invite.user.name}}</div>
														<div class="subtext F12">{{invite.user.email}}</div>
													</td>
												</tr>
											</table>

										</a>
									</li>
								</ul>

							</li>
						</ul>

					</div>

				</td>
				<td>
					
					<div class="menu-wrap">

						<ul class="menu-container">
							<li class="menu-section">

								<div class="menu-label confirmed">Confirmed</div>

								<ul class="menu-items">
									<li class="menu-item" ng:repeat="invite in invitations.confirmed">
										<a href="" class="menu-item-label">
											
											<table class="menu-item-table">
												<tr>
													<td ng:if="invite.user.profile_pic">
														<img src="{{invite.user.profile_pic}}" class="profile_pic" />
													</td>
													<td>
														<div class="maintext F14">{{invite.user.name}}</div>
														<div class="subtext F12">{{invite.user.email}}</div>
													</td>
												</tr>
											</table>

										</a>
									</li>
								</ul>

							</li>
						</ul>

					</div>

				</td>
				<td>
					
					<div class="menu-wrap">

						<ul class="menu-container">
							<li class="menu-section">

								<div class="menu-label declined">Declined</div>

								<ul class="menu-items">
									<li class="menu-item" ng:repeat="invite in invitations.declined">
										<a href="" class="menu-item-label">
											
											<table class="menu-item-table">
												<tr>
													<td ng:if="invite.user.profile_pic">
														<img src="{{invite.user.profile_pic}}" class="profile_pic" />
													</td>
													<td>
														<div class="maintext F14">{{invite.user.name}}</div>
														<div class="subtext F12">{{invite.user.email}}</div>
													</td>
												</tr>
											</table>
											
										</a>
									</li>
								</ul>

							</li>
						</ul>

					</div>

				</td>
			</tr>
		</table>

	</div>

	<div class="map-wrap" ng:show="etab.map">

		<div id="map-canvas">Location Not Found</div>
		<!--<input type="text" class="lrg full" placeholder="Directions (Address, City, Place...)" />-->

	</div>

	<div class="instagram-wrap" ng:show="etab.instagram" align="center">

		<div class="instagram-link" ng:if="!current_user.instagram_verified">

			<%= image_tag 'camera-100.png',class: 'instagram-camera' %>
			<div class="instagram-text"><a href="https://api.instagram.com/oauth/authorize/?client_id=<%= INFRA[:instagram][:client_id] %>&redirect_uri=<%= INFRA[:instagram][:redirect_uri] %>%3ftype=verify&response_type=code" onclick="return pop(this.href,500,400);" ng:if="true">Click&nbsp;here</a> to link your Instagram account and view all posts associated with this event (#{{event.hashtag}}).</div>

		</div>

		<div class="instagram-img" ng:repeat="post in instagrams"><img src="{{post.images.standard_resolution.url}}" /></div>

	</div>

</div>